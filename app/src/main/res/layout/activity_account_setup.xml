<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface">

    <LinearLayout
        android:id="@+id/card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card"
        android:padding="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="24dp">

        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical|start"
            android:paddingStart="16dp"
            android:text="Account Setup"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/bg_primary_gradient"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <Button
                android:id="@+id/btnCurrency"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="1) Choose Currency"
                android:background="@drawable/bg_primary_button"
                android:textColor="@color/white"/>

            <Space android:layout_width="0dp" android:layout_height="12dp"/>

            <Button
                android:id="@+id/btnCategories"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="2) Select Categories"
                android:background="@drawable/bg_primary_button"
                android:textColor="@color/white"/>

            <Space android:layout_width="0dp" android:layout_height="12dp"/>

            <Button
                android:id="@+id/btnBudget"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="3) Set Monthly Budget"
                android:background="@drawable/bg_primary_button"
                android:textColor="@color/white"/>

            <Space android:layout_width="0dp" android:layout_height="12dp"/>

            <Button
                android:id="@+id/btnGoal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="4) (Optional) Create Goal"
                android:background="@drawable/bg_primary_button"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
